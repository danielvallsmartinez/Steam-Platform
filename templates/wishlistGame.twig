{% extends "base.twig" %}

{% block title %}Wishlist{% endblock %}

{% block content %}
    <p>{{ message }}</p>
        <div>
            <div class="divMyGame">
                <img src="{{ game.thumb() }}" alt="game thumbnail">
                <p class="pGames">ID: {{ game.id() }}</p>
                <p class="pGames">Title: {{ game.title() }}</p>
                <p style="color: greenyellow" class="pGames">{{ game.normalPrice() }}</p>
            </div>
        </div>
{% endblock %}